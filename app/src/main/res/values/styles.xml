<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_pitchBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimary_pitchBlack</item>
        <item name="colorAccent">@color/colorAccent_pitchBlack</item>
        <item name="android:windowBackground">@color/colorBackground_pitchBlack</item>
        <item name="cardViewStyle">@style/AppTheme.CardView.Black</item>
    </style>

    <style name="AppTheme.CardView.Black" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorBackground_pitchBlack</item>
    </style>

</resources>
